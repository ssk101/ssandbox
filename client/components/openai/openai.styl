
:host
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 1em
  padding: 1em
  box-sizing: border-box
  width: 100%
  height: 100vh
  align-items: start
  grid-auto-rows: max-content
  --input-height: 400px

.inputs,
.previews
  display: grid
  grid-auto-flow: row
  grid-auto-rows: max-content
  grid-gap: 1em

.inputs
  &:not([is-code='true'])
    grid-column: span 2

  &[is-code='true']
    grid-column: 1

  .buttons
    display: grid
    grid-auto-flow: column
    grid-gap: 1em
    justify-content: start

.previews
  &:not([is-code='true'])
    display: none

  &[is-code='true']
    display: grid
    grid-column: 2

.labelled.response
  grid-column: span 2

.labelled
  display: grid
  grid-auto-flow: row
  grid-auto-rows: max-content
  grid-gap: 5px

label
  font-size: 12px

textarea
  width: 100%
  background: #111
  color: #fff
  font-size: 13px
  box-sizing: border-box
  padding: .5em
  line-height: 14px

  &.input
    height: calc(var(--input-height) - 75px - 2em)

  &.instruction
    height: 75px

[hidden='true']
  display: none

pre
  width: 100%
  border: 1px solid #444
  background: #1a1a1a
  padding: .5em
  box-sizing: border-box
  margin: 0

  &.preview
    line-height: 14px
    overflow: auto

  &.response
    min-height: 150px

code
  white-space: pre-wrap

  &[is-code='true']
    white-space: pre
